create user:
mutation {
  createUser(userInput: {
    email: "newuser@example.com",
    password: "securepassword"
  }) {
    id
    email
  }
}

user login:
{
  login(loginInput: { email: "newuser@example.com", password: "securepassword" }) {
    userId
    token
    tokenExpiration
  }
}


Header: {"Content-Type":"application/json", "Authorization": ""}

